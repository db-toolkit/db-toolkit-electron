{
  "name": "db-toolkit",
  "productName": "DB Toolkit",
  "version": "0.1.0",
  "description": "Modern cross-platform database management application",
  "author": {
    "name": "Peter Adelodun",
    "email": "adelodunpeter24@gmail.com"
  },
  "homepage": "https://github.com/Adelodunpeter25/db-toolkit",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@tanstack/react-virtual": "^3.13.12",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "archiver": "^7.0.1",
    "axios": "^1.13.2",
    "better-sqlite3": "^11.7.0",
    "dagre": "^0.8.5",
    "framer-motion": "^12.23.24",
    "html-to-image": "^1.11.13",
    "lucide-react": "^0.554.0",
    "monaco-editor": "^0.55.1",
    "mongodb": "^6.10.0",
    "mysql2": "^3.11.5",
    "node-cron": "^3.0.3",
    "pdfkit": "^0.17.2",
    "pg": "^8.13.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "react-split": "^2.0.14",
    "reactflow": "^11.11.4",
    "recharts": "^3.4.1",
    "resend": "^6.6.0",
    "sql-formatter": "^15.6.10",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^7.2.2",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.dbtoolkit.app",
    "productName": "DB Toolkit",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "build/icons/**/*",
      "resources/backend/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "mac": {
      "icon": "build/icons/icon.icns",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "minimumSystemVersion": "10.13",
      "artifactName": "${productName}-mac-${arch}.${ext}"
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "artifactName": "${productName}-win-${arch}.${ext}"
    },
    "linux": {
      "icon": "build/icons/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "artifactName": "${productName}-linux.${ext}"
    }
  }
}
